<Window x:Class="PetShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Background="#FF76E383" Height="50" />



        </StackPanel>
        <StackPanel Grid.Row="0">
            <Image Source="/Res/logo.png" Height="50" Width="50" VerticalAlignment="Center" HorizontalAlignment="Left" />

        </StackPanel>
        <StackPanel Grid.Row="0">
            <TextBlock Height="20"  Text=" ООО «Товары для животных»" HorizontalAlignment="Center" Margin="313,15,295,0" VerticalAlignment="Center"
                       FontFamily="Comic Sans MS" Width="184"/>
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
        
    </Grid>
    
    
</Window>
